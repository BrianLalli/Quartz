<div class="container mt-10">
  <div class="projectId" project-id="{{id}}">
    <h2 class="mt-2 mb-2 profileTitle">{{name}}</h2>
    <div class="row">
      <div class="col-6">
        <p>Owner: {{user.name}}</p>
        <p>Status: {{status}}</p>
        <p>Description: {{description}} </p>
      </div>
      <div class="col-6">
        <p>Priority: {{priority}}</p>
        <p>Deadline: {{deadline}}</p>
        <p>Budget: {{budget}}</p>
      </div>
    </div>

    <p class="mt-5 createdProject">Created on
      {{format_date date_created}}</p>
  </div>

  <div class="sm:mt-8 sm:flex sm:justify-center lg:justify-start">
    <div class="rounded-md shadow">
      <a
        href="/dashboard"
        class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10"
      > Continue </a>
    </div>
  </div>

  <form class="row customizedForm" id="customizedForm">

    <div class="col-12">
      <input
        name="commentUsername"
        id="commentUsername"
        placeholder="Add your name"
        value=""
        class="form-input w-100"
      />
      <textarea
        placeholder="Leave a comment"
        for="post-comment"
        class="form-input"
        id="commentText"
        name="post-comment"
        class="form-input w-100"
      ></textarea>
      <button
        class="items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10 projectBtn addCommentBtn"
        type="submit"
      >
        Add comment</button>
    </div>
  </form>

  <section class="comments" id="comment-container"></section>
</div>

<script src="/js/comments.js"></script>